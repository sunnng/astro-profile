---
import { Image } from "astro:assets";
import HomeImg from "../assets/imgs/home.png";
---

<section id="home" class="home">
  <div class="d-grid home__wrapper container">
    <div class="home__content">
      <div class="home__social">
        <ul class="social__list">
          <li class="social__item">
            <a href="#" class="social__link">
              <i class="ri-linkedin-line"></i>
            </a>
          </li>
          <li class="social__item">
            <a href="#" class="social__link">
              <i class="ri-github-line"></i>
            </a>
          </li>
          <li class="social__item">
            <a href="#" class="social__link">
              <i class="ri-dribbble-line"></i>
            </a>
          </li>
          <li class="social__item">
            <a href="#" class="social__link">
              <i class="ri-youtube-line"></i>
            </a>
          </li>
        </ul>
      </div>

      <div class="home__info">
        <h1 class="home__name">Arthur<br />Robertson</h1>
        <p class="home__profession">Fullstack Developer</p>
        <p class="home__description">
          Pellentesque suspendisse id sagittis orci feugiat vel nec euismod.
          Risus sit adipiscing tempus adipiscing phasellus neque vitae in.
          Ultricies pellentesque turpis risus nullam proin turpis.
        </p>
        <div class="home__buttons">
          <a href="#" class="btn btn--outline">Hire me</a>
          <a href="#" class="btn--line">See My Work</a>
        </div>
      </div>
    </div>

    <Image src={HomeImg} alt="home page" class="home__img" />
  </div>
</section>
<style>
  .home {
    background-color: var(--color-dark);
  }

  .home__img {
    height: auto;
    width: 45rem;
  }

  .home__wrapper {
    min-height: calc(100vh - var(--height-header));
    align-content: center;
    justify-items: center;
    padding: 3rem 0;
  }

  .home__content {
    display: flex;
    align-items: center;
    column-gap: 3rem;
  }

  .home__name {
    color: var(--color-white);
    font-size: var(--fs-4xl);
    margin-bottom: 1rem;
  }

  .home__profession {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .home__description {
    margin-bottom: 3rem;
  }

  .home__buttons {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .social__list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .social__link {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 4rem;
    height: 4rem;
    border: 0.1rem solid var(--color-text);
    border-radius: 50%;
    font-size: var(--fs-lg);
    transition: var(--transition);
  }

  .social__link:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    border-color: transparent;
  }
</style>
